{
	"name": "vrkansagara/shopify",
	"description": "SDK for Shopify API",
	"type": "library",
	"license": "BSD-3-Clause",
	"homepage": "https://vrkansagara.in",
	"support": {
		"docs": "https://vrkansagara.in",
		"issues": "https://vrkansagara.in",
		"source": "https://github.com/vrkansagara/shopify",
		"rss": "https://github.com/vrkansagara/shopify/releases.atom"
	},
	"config": {
		"sort-packages": true
	},
	"authors": [
		{
			"name": "Vallabh Kansagara",
			"email": "vrkansagara@gmail.com",
			"homepage": "https://vrkansagara.in"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^7.3 || ~8.0.0",
		"guzzlehttp/guzzle": "^7.3"
	},
	"autoload": {
		"psr-4": {
			"Vrkansagara\\Shopify\\":"src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Vrkansagara\\ShopifyTest\\":"test/"
		}
	},
	"require-dev": {
		"laminas/laminas-code": "^4.1",
		"laminas/laminas-coding-standard": "^2.1",
		"laminas/laminas-file": "^2.9",
		"laminas/laminas-filter": "^2.11",
		"phpunit/phpunit": "^9.5",
		"roave/security-advisories": "9999999-dev"
	},
	"scripts": {
		"check": [
			"@cs-check",
			"@test"
		],
		"cs-check": "phpcs",
		"cs-fix": "phpcbf",
		"test": "vendor/bin/phpunit --colors=always --testdox ",
		"test-coverage": "vendor/bin/phpunit --colors=always --coverage-clover clover.xml"
	}
}
